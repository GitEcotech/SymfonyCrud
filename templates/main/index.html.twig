{% extends 'base.html.twig' %}

{% block title %}List{% endblock %}

{% block body %}
    <div class="container">
      {% for message in app.flashes('success') %}
          <div class="alert alert-success mt-4 mb-3">{{message}}</div>
      {% endfor %}
        <table class="table">
            <thead>
              <tr>
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">Content</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
            {% for data in list %}
                <tr>
                <th scope="row">{{data.id}}</th>
                <td>{{data.title}}</td>
                <td>{{data.content}}</td>
                <td>
                    <a href="{{ path('update',{'id':data.id }) }}" class="btn btn-warning">Update</a>
                    <a href="{{ path('delete',{'id':data.id }) }}" class="btn btn-danger">Delete</a>
                </td>
              </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
